                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <section>
                <div class="">
                    <div class="row">
                        <div class=" col-md-6">
                            <div class="card col-md-12">
                                <div class="card-header">
                                    <h4 class="card-title">Participant Status</h4>
                                </div>
                                <div class="card-body">
                                    @*Chart 1*@
                                    <div id="placement"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card col-md-12">
                                <div class="">
                                    <div class="card-header">
                                        <h4 class="card-title">Participant Grade</h4>
                                    </div>
                                    <div class="card-body">
                                        @*Chart 2*@
                                        <div id="grading" class="grading"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    @*modal skill set*@
    <!-- Modal -->
    <div class="modal fade" id="cobaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Participant Skill Set</h5>
