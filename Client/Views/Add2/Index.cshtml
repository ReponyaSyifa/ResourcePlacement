            <section class="section">
                <div class="card mt-3">
                    <div class="card-header">
                        <h3>Project Lists</h3>
                        <p>Uploaded Project Lists by Trainer</p>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped" id="table2">
                            <thead>
                                <tr>
